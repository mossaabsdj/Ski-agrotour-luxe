

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model VerificationToken {
  id        String   @id @default(cuid())
  email     String
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
model Product {
  id         Int         @id @default(autoincrement())
  title      String      @default("")
  desc       String      @default("")
  prix       Float       @default(0)
  emballage  String      @default("")
  farmId     Int?        // Optional if some products are not linked to a farm
  farm       Farm?       @relation(fields: [farmId], references: [id])
  image      String      @default("") // âœ… New field for the image path or URL

  commandes  Commande[]  // ðŸ‘ˆ relation
  Date  DateTime    @default(now())
  emballages Emballage[] // 1 Product â†’ many Emballages
}




model Compte {
  id        Int       @id @default(autoincrement())
  fullName  String
  email     String    @unique
  phone     String?
  country   String?
  Password  String
  role      Role      @default(CLIENT)
  createdAt DateTime  @default(now())
  commandes  Commande[]   
}
model Farm {
  id          Int           @id @default(autoincrement())
  name        String
  createdAt   DateTime      @default(now())

  Product Product[]


}
enum Role {
  ADMIN
  CLIENT
  FARMER
  DELIVERY
}

model Emballage {
  id        Int      @id @default(autoincrement())
  name      String
   productId Int   // FK to Product
  product   Product  @relation(fields: [productId], references: [id]) // Many Emballages â†’ 1 Product
}

model Commande {
  id         Int      @id @default(autoincrement())
  emballage  String
  adresse    String
  quantite   Int
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
  compte      Compte     @relation(fields: [compteId], references: [id])
  compteId    Int
  status Boolean? 
  Date  DateTime @default(now())
}